<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="50dp"
        android:textSize="40dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="70dp"
        android:textColor="#052CE4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you already have an account, log in"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="18"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="280dp" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="18"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_visibility_off_24"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="350dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:ems="20"
        android:background="#052CE4"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="480dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Dont have an account ?"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="550dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="550dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-25dp"
        android:textSize="20dp"
        android:textColor="#052CE4"/>
</LinearLayout>